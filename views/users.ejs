<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <link href="/node_modules/bootstrap-icons/dist/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.1/css/all.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Dashborad | Home</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary" id="nav">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                </ul>
            </div>
            <ul class="navbar-nav d-flex justify-content-end">
                <li class="nav-item dropdown d-flex align-items-center">
                    <p class="pt-1 me-3 text-aling-center">Seja bem-vindo, <%= user.username.split(' ')[0] %>!</p>
                        <a class="nav-link dropdown-toggle p-0" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            <img class="avatar" src="/img/avatar_user/<%= typeof user.avatar == ' undefined'
                            ? 'avatar-none.png' : user.avatar %>" width="40"> </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/perfil">Perfil</a></li>
                                <li><a class="dropdown-item" href="/dashboard">Dashborad</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="/logout">Logout</a></li>
                            </ul>
                </li>
            </ul>
        </div>
    </nav>
    <div class="d-flex">
        <div class="menu_admin">
            <div class="d-flex flex-column align-items-start ms-4 mt-5">
                <h4><a class="op_menu" href="/dashboard"><i class="fa-solid fa-house"></i> Home</a></h4>
                <h4><a class="op_menu" href="/noticias"><i class="fa-solid fa-newspaper"></i> Notícias</a></h4>
                <h4><a class="op_menu" href="/users"><i class="fa-solid fa-user-group"></i> Usuários</a></h4>
            </div>
        </div>
        <div class="dashboard_area">
            <h1>Dashborad</h1>
            <table class="table m-1">
                <thead>
                    <tr>
                        <th class="text-center" scope="col">#</th>
                        <th class="text-center" scope="col">Avatar</th>
                        <th class="text-center" scope="col">Nome</th>
                        <th class="text-center" scope="col">E-mail</th>
                        <th class="text-center" scope="col">Data de nascimento</th>
                        <th class="text-center" scope="col">Excluir</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(function(usr, i) { %>
                        <th scope="row" class="text-center"><%= i + 1 %></th>
                        <td class="text-center"><img class="avatar" src="/img/avatar_user/<%= typeof usr.imagem_name == 'undefined'
                            ? 'avatar-none.png' : user.avatar %>" width="40"> </a></td>
                        <td class="text-center"><%= usr.nome %></td>
                        <td class="text-center"><%= usr.email %></td>
                        <td class="text-center"><%= usr.data_nascimento %></td>
                        <td class="text-center"><button style="color: red; border: none; background-color: white;"><i class="fa-solid fa-trash"></i></button><td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>